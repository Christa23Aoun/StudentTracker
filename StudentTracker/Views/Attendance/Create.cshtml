@model StudentTrackerCOMMON.Models.Attendance

<h2>Add Attendance</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Student ID</label>
        <input asp-for="StudentID" class="form-control" />
    </div>

    <div class="form-group">
        <label>Course ID</label>
        <input asp-for="CourseID" class="form-control" />
    </div>

    <div class="form-group">
        <label>Attendance Date</label>
        <input asp-for="AttendanceDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Is Present</label>
        <input asp-for="IsPresent" type="checkbox" />
    </div>

    <div class="form-group">
        <label>Is Validated</label>
        <input asp-for="IsValidated" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Save</button>
</form>
