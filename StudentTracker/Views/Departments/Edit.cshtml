@model StudentTrackerCOMMON.Models.Department

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">✏️ Edit Department</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.Error</div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="DepartmentID" />

        <div class="mb-3">
            <label asp-for="DepartmentName" class="form-label fw-bold">Department Name</label>
            <input asp-for="DepartmentName" class="form-control shadow-sm" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-primary px-4">Save</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>
