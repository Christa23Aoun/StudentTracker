<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentTracker</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>

    <!-- ===== Header: Top Contact Bar ===== -->
    <div class="topbar">
        <div class="container topbar-inner">
            <div class="topbar-left">
                <span><i class="fa-solid fa-phone"></i> +961 70 413 003</span>
                <span><i class="fa-solid fa-envelope"></i> info@wtf.edu.lb</span>
            </div>
        </div>
    </div>

    <!-- ===== Header: Main Navigation ===== -->
    <header class="site-header">
        <div class="container nav">
            <div class="brand">
                <div class="brand-title">WTF</div>
                <div class="brand-sub">We’re The Future (Inshallah)</div>
            </div>

            <nav class="main-nav" aria-label="Primary">
                <a href="#">About</a>
                <a href="#">Faculties</a>
                <a href="#">Admissions</a>
                <a href="#">Research</a>
                <a href="#">Student Life</a>
                <a href="#">News</a>
            </nav>

            <div class="nav-actions">
                <div class="lang-switch">
                    <button class="lang active">EN</button>
                    <span>|</span>
                    <button class="lang">FR</button>
                </div>
                <a class="btn primary" asp-controller="Auth" asp-action="Login">Se connecter</a>
                <button class="menu-toggle" aria-label="Open menu">☰</button>
            </div>
        </div>
    </header>

    <!-- ===== Body content ===== -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- ===== Footer ===== -->
    <footer class="footer">
        <div class="container footer-inner">
            <div class="footer-brand">
                <h3>WTF</h3>
                <p class="tagline">We’re The Future (Inshallah)</p>
                <p class="motto">Building Tomorrow, Today</p>
            </div>

            <div class="footer-links">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="#">Admissions</a></li>
                    <li><a href="#">Faculties</a></li>
                    <li><a href="#">Research</a></li>
                    <li><a href="#">Student Life</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>

            <div class="footer-contact">
                <h4>Contact Us</h4>
                <p><i class="fa-solid fa-phone"></i> +961 70 413 000</p>
                <p><i class="fa-solid fa-envelope"></i> info@wtf.edu.lb</p>
                <p><i class="fa-solid fa-location-dot"></i> Beirut, Lebanon</p>
                <div class="footer-social">
                    <a href="#" aria-label="Facebook"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" aria-label="Instagram"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#" aria-label="LinkedIn"><i class="fa-brands fa-linkedin-in"></i></a>
                    <a href="https://wa.me/96170413009" target="_blank" aria-label="WhatsApp">
                        <i class="fa-brands fa-whatsapp"></i>
                    </a>
                    <a href="#" aria-label="TikTok"><i class="fa-brands fa-tiktok"></i></a>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <p>© 2025 WTF University – All Rights Reserved.</p>
        </div>
    </footer>

    <!-- ===== Scripts ===== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
