@model StudentTrackerCOMMON.DTOs.AdminDashboard.AdminDashboardDto

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        font-weight: 600;
    }

    .dashboard-container {
        margin-top: 40px;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

        .card h4 {
            font-weight: 700;
            font-size: 1.5rem;
        }

        .card h6 {
            font-weight: 500;
            letter-spacing: 0.5px;
        }

    /* 🌿 Pastel color palette for cards */
    .card-students {
        background-color: #E8F5E9; /* light green */
        color: #2E7D32;
    }

    .card-teachers {
        background-color: #E3F2FD; /* light blue */
        color: #1565C0;
    }

    .card-courses {
        background-color: #FFF3E0; /* light orange */
        color: #EF6C00;
    }

    .card-departments {
        background-color: #F3E5F5; /* light purple */
        color: #6A1B9A;
    }

    .summary {
        margin-top: 30px;
        font-size: 1.1rem;
        color: #555;
    }

        .summary strong {
            color: #000;
        }

    /* clickable cards */
    .card-link {
        text-decoration: none;
        display: block;
    }

        .card-link .card {
            cursor: pointer;
        }

        .card-link:focus .card {
            outline: 2px solid rgba(0,0,0,0.2);
            outline-offset: 2px;
        }
</style>

<div class="container dashboard-container">
    <h2 class="text-center text-dark mb-4">🧑‍💼 Admin Dashboard</h2>

    <div class="row g-4">
        <div class="col-md-3">
            <a class="card-link" href="/Users?role=Student" aria-label="Go to Students list">
                <div class="card p-3 text-center card-students">
                    <h6>👩‍🎓 Total Students</h6>
                    <h4>@Model.Summary.TotalStudents</h4>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a class="card-link" href="/Users?role=Teacher" aria-label="Go to Teachers list">
                <div class="card p-3 text-center card-teachers">
                    <h6>👨‍🏫 Total Teachers</h6>
                    <h4>@Model.Summary.TotalTeachers</h4>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a class="card-link" href="/Courses" aria-label="Go to Courses">
                <div class="card p-3 text-center card-courses">
                    <h6>📚 Active Courses</h6>
                    <h4>@Model.Summary.ActiveCourses</h4>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a class="card-link" href="/Departments" aria-label="Go to Departments">
                <div class="card p-3 text-center card-departments">
                    <h6>🏫 Departments</h6>
                    <h4>@Model.Summary.Departments</h4>
                </div>
            </a>
        </div>
    </div>

    <div class="summary text-center mt-5">
        Academic Year: <strong>@Model.Summary.CurrentAcademicYear</strong> |
        Semester: <strong>@Model.Summary.CurrentSemester</strong>
    </div>
</div>
