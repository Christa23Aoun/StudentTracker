@model IEnumerable<StudentTracker.Models.SemesterView>
<h2>Semesters</h2>
<p><a asp-action="Create" class="btn btn-success">+ New Semester</a></p>
@if (TempData["Msg"] != null)
{
    <div class="alert alert-info">@TempData["Msg"]</div>
}

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Academic Year</th>
            <th>Name</th>
            <th>#</th>
            <th>Start</th>
            <th>End</th>
            <th style="width:150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.SemesterID</td>
                <td>@s.AcademicYearID</td> <!-- Optional: show AY name if you return it later -->
                <td>@s.Name</td>
                <td>@s.SemesterNb</td>
                <td>@s.StartDate.ToShortDateString()</td>
                <td>@s.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.SemesterID" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@s.SemesterID" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
