@model IEnumerable<StudentTracker.Models.CourseView>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold mb-0">📚 Course Management</h2>

        <!-- ⬅️ Back to Dashboard -->
        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary shadow-sm">
            ⬅️ Back to Dashboard
        </a>
    </div>

    <!-- ✅ Alerts for success/delete -->
    @if (TempData["Msg"] != null)
    {
        var msg = TempData["Msg"].ToString();
        var isDelete = msg.Contains("delete", StringComparison.OrdinalIgnoreCase);
        <div class="alert @(isDelete ? "alert-danger" : "alert-success") text-center shadow-sm rounded-3 mb-4">
            @msg
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success shadow-sm">
            ➕ Add Course
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle shadow-sm">
            <thead class="table-light text-center">
                <tr>
                    <th>ID</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>CH</th>
                    <th>Department ID</th>
                    <th>Teacher ID</th>
                    <th>Semester ID</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var c in Model)
                    {
                        <tr class="text-center">
                            <td>@c.CourseID</td>
                            <td>@c.CourseCode</td>
                            <td>@c.CourseName</td>
                            <td>@c.CreditHours</td>
                            <td>@c.DepartmentID</td>
                            <td>@c.TeacherID</td>
                            <td>@c.SemesterID</td>
                            <td>@(c.IsActive ? "✅ Active" : "❌ Inactive")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@c.CourseID"
                                   class="btn btn-sm btn-outline-primary me-1">✏️ Edit</a>
                                <a asp-action="Delete" asp-route-id="@c.CourseID"
                                   class="btn btn-sm btn-outline-danger">🗑️ Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">No courses found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- ✅ Pastel Alert Styles -->
<style>
    .alert-success {
        background-color: #E8F5E9;
        color: #2E7D32;
        font-weight: 500;
    }

    .alert-danger {
        background-color: #FFEBEE;
        color: #C62828;
        font-weight: 500;
    }

    .alert {
        transition: opacity 0.6s ease;
    }
</style>

<script>
    // ✅ Fade alerts after 3 seconds
    setTimeout(() => {
        const alertBox = document.querySelector('.alert');
        if (alertBox) {
            alertBox.style.opacity = '0';
            setTimeout(() => alertBox.remove(), 600);
        }
    }, 3000);
</script>
