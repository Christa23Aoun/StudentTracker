@model StudentTrackerCOMMON.Models.Test

<h2>Create Test</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Course ID</label>
        <input asp-for="CourseID" class="form-control" />
    </div>
    <div class="form-group">
        <label>Test Name</label>
        <input asp-for="TestName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Test Date</label>
        <input asp-for="TestDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Weight</label>
        <input asp-for="Weight" class="form-control" />
    </div>
    <div class="form-group">
        <label>Max Score</label>
        <input asp-for="MaxScore" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success mt-2">Save</button>
</form>
