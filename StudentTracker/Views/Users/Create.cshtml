@model StudentTrackerCOMMON.Models.User
<h2>Create User</h2>
<form asp-action="Create" method="post">
    <div><label>Full Name</label><input asp-for="FullName" class="form-control" /></div>
    <div><label>Email</label><input asp-for="Email" class="form-control" /></div>
    <div><label>Password</label><input asp-for="PasswordHash" class="form-control" type="password" /></div>
    <div><label>Role ID</label><input asp-for="RoleID" class="form-control" /></div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
