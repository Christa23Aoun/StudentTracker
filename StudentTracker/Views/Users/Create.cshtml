@model StudentTrackerCOMMON.Models.User

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Add New User</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.Error</div>
    }

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Password</label>
            <input asp-for="PasswordHash" type="password" class="form-control" required />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Role</label>
            <select asp-for="RoleID" class="form-select" required>
                <option value="3">Student</option>
                <option value="2">Teacher</option>
                <option value="1">Admin</option>
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Create</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>
