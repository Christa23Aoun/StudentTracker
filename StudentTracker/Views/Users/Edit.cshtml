@model StudentTrackerCOMMON.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">✏️ Edit User</h2>

    <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-white">
        <input type="hidden" asp-for="UserID" />

        <div class="mb-3">
            <label class="form-label fw-semibold">Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Role ID</label>
            <select asp-for="RoleID" class="form-select">
                <option value="1">Admin</option>
                <option value="2">Teacher</option>
                <option value="3">Student</option>
            </select>
            <span asp-validation-for="RoleID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Active</label>
            <input asp-for="IsActive" type="checkbox" class="form-check-input ms-2" />
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">⬅ Back</a>
            <button type="submit" class="btn btn-success">💾 Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
